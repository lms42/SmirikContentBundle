{% extends 'SmirikCourseBundle:Admin:layout.html.twig' %}

{% block title %}{{ 'admin.category.new.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'admin.category.new.title'|trans }} <small>{{ 'admin.category.new.title.comment'|trans }}</small></h1>
{% endblock %}

{% block content %}

{% form_theme form 'SmirikAdminBundle:Form:fields.html.twig' %}

<form action="{{ path('admin_categories_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
  <fieldset>
    {{ form_widget(form) }}
    <div class="well">
      <a href="{{ path('admin_categories') }}" class="btn">
          {{ 'admin.category.action.back'|trans }}
      </a>
      <button type="submit" class="btn btn-primary">{{ 'admin.category.action.save'|trans }}</button>
    </div>
  </fieldset>
</form>


{% endblock %}
