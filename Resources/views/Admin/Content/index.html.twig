{% extends 'SmirikContentBundle:Admin:layout.html.twig' %}

{% block title %}{{ 'admin.content.index.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'admin.content.index.title'|trans }} <small>{{ 'admin.content.index.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

<table class="records_list table table-striped table-bordered">
    <thead>
        <tr>
          <th width="50">{{ 'admin.content.table.header.id'|trans }}</th>
          <th>{{ 'admin.content.table.header.categoryid'|trans }}</th>
          <th>{{ 'admin.content.table.header.title'|trans }}</th>
          <th>{{ 'admin.content.table.header.isactive'|trans }}</th>
          <th>{{ 'admin.content.table.header.createdat'|trans }}</th>
          <th>{{ 'admin.content.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_content_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.category }}</td>
            <td><a href="{{ path('admin_content_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            <td>{{ entity.isactive }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_content_edit', { 'id': entity.id }) }}">{{ 'admin.content.action.edit'|trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('admin_content_new') }}" class="btn">
  {{ 'admin.content.action.create'|trans }}
</a>

{% endblock %}
