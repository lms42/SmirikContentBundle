{% extends '::base.html.twig' %}

{% block title %}{{content.title}} / {{ content.category.title }}{% endblock %}

{% block header %}
    {{ content.title }}
{% endblock %}

{% block breadcrumbs %}
    {% include "SmirikCoreBundle:Menu:breadcrumbs.html.twig" with {
        items: [
            {},
            {label: content.category.title, uri: path("category_show", {'urlkey': content.category.urlkey } )},
            {label: content.title, uri: "#"},
        ]}
    %}
{% endblock %}

{% block content %}

  <div class="item-image">
    {% if content.hasImage %}
      <img src="{{ asset('uploads/pages/' ~ content.file) }}" width="200" class="thumb">
    {% endif %}
  </div>

  <div class="description">
    {{ content.description | raw }}
  </div>
  <p>
    {{ content.text | raw }}
  </p>
  
  {% if (content.file|length > 0) and not(content.hasImage)  %}
  <p>
    <a href="{{ asset('uploads/pages/' ~ content.file) }}" title="{{ content.title }}">Скачать презентацию {{ content.title }}</a>
  </p>
  {% endif %}
  
  <div class="category">
    создан {{ content.createdAt.format('d.m.Y') }}
  </div>
  
  <div id="vk_comments"></div>
  <script type="text/javascript">
  VK.Widgets.Comments("vk_comments", {limit: 15});
  </script>
  
{% endblock %}